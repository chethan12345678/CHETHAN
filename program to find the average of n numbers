#include <stdio.h>
int main() {
    int n, i;
    float num, sum=0, avg;
    printf("Enter the number of elements: ");
    scanf("%d", &n);
    for(i=0; i<n; i++) {
        printf("Enter element %d: ", i+1);
        scanf("%f", &num);
        sum += num;
    }
    avg = sum / n;
    printf("Average of the numbers is %.2f", avg);
    return 0;
}
