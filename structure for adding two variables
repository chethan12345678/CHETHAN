#include <stdio.h>
struct add {
    int num1;
    int num2;
};
int main() {
    struct add values;
    printf("Enter the first number: ");
    scanf("%d", &values.num1);
    printf("Enter the second number: ");
    scanf("%d", &values.num2);
    int sum = values.num1 + values.num2;
    printf("The sum of %d and %d is %d.\n", values.num1, values.num2, sum);
    return 0;
}
